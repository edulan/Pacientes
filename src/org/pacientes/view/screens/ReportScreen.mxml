<?xml version="1.0" encoding="utf-8"?>
<s:NavigatorContent xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark"
					xmlns:forms="org.pacientes.view.forms.*"
					xmlns:vo="org.pacientes.model.vo.*"
					name="Report"
					width="100%" height="100%">
	
	<fx:Declarations>
		<vo:PatientVO id="patient" />
		<s:ArrayCollection id="reports" />
	</fx:Declarations>
	
	<s:layout>
		<s:VerticalLayout />
	</s:layout>
	
	<s:Label text="Relación de informes del paciente {patient.name}" />
	<s:HGroup>
		<s:VGroup>
			<s:Button label="Añadir" />
			<s:List dataProvider="{reports}" />
		</s:VGroup>
		<forms:ReportForm />
	</s:HGroup>

</s:NavigatorContent>
